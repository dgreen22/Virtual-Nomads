<div class="row">
	<div class="col-md-6 col-md-offset-3 blog-submit">
		<%= form_for @blog_post do |b| %>
			<%= b.label :title %>
			<%= b.text_field :title %><br>

			<%= b.fields_for :categories do |cat| %>
			  <%= cat.label :category_name, "Category 1" %>
			  <%= cat.collection_select(:category_id, Category.all, :id, :category_name, include_blank: "Select Category") %><br>

			  <%= cat.label :category_name, "Category 2" %>
			  <%= cat.collection_select(:category_id, Category.all, :id, :category_name, include_blank: "Select Category") %><br>

			  <%= cat.label :category_name, "Category 3" %>
			  <%= cat.collection_select(:category_id, Category.all, :id, :category_name, include_blank: "Select Category") %><br>
			<% end %>

			<%= b.label :posted_by %>
			<%= b.text_field :posted_by %><br>

			<%= b.label :content %>
			<%= b.text_area :content %><br>

			<%= b.label :blog_pic, "Picture" %>
			<%= b.file_field :blog_pic %>

			<%= b.submit "Submit", class: "btn btn-primary" %>
	  <% end %>
	</div>
</div>