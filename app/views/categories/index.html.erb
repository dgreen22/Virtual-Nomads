<div class="row">
	<div class="col-xs-12 col-md-8 col-md-offset-2 all-cats">
		<h3> All Categories </h3>
		<% @categories.each do |item| %>
			<p> <span><%= item.category_name %></span>
				<%= link_to "Delete Category",category_path(item), method: :delete, data: {confirm: "Are you sure you would like to delete this category?"}, class: "btn btn-danger" %><br>
			</p>
		<% end %>
	</div>
</div>

