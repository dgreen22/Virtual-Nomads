<section class="row" id="home">
	<div class="col-md-12 landing-area">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
		  <!-- Indicators -->
		  <ol class="carousel-indicators">
		    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		    <li data-target="#myCarousel" data-slide-to="1"></li>
		    <li data-target="#myCarousel" data-slide-to="2"></li>
		    <li data-target="#myCarousel" data-slide-to="3"></li>
		  </ol>

		  <!-- Wrapper for slides -->
		  <div class="carousel-inner" role="listbox">
		    <div class="item active">
		      <%= image_tag("adventure-pic.jpg", class: "landing-pics", alt: "person walking on canopy") %>
		      <div class="carousel-caption">
		      	<div class="full-width">
			        <h1>We listen to finds the things that make your trip that more awesome</h1>
			        <p></p>
			      </div><!--/full-width-->
		      </div>
		    </div>

		    <div class="item">
		    	<%= image_tag("art-pic.jpg", class: "landing-pics", alt: "person in art shop") %>
		      <div class="carousel-caption">
		      	<div class="full-width">
			        <h1>Allow us to curate a travel itinerary  that fits your style</h1>
			        <p></p>
		      	</div>
		      </div>
		    </div>

		    <div class="item">
		    	<%= image_tag("beach-pic.jpg", class: "landing-pics", alt: "person on beach") %>
		      <div class="carousel-caption">
		      	<div class="full-width">
			        <h1>Travelling leaves you speechless, then turns you into a storyteller</h1>
			        <p></p>
			      </div>
			    </div>
		    </div>

		    <div class="item">
		    	<%= image_tag("historic.jpg", class: "landing-pics", alt: "stairs from historic slave castles") %>
		      <div class="carousel-caption">
		      	<div class="full-width" id="fourth">
			        <h1>Explore.<br> Dream.<br> Discover.</h1>
			        <p></p>
			      </div>
		      </div>
		    </div>
		  </div>
		</div>			
	</div><!--/col-md-12-->
	<!--< %= render partial: "subscribe_modal" %>-->
</section>

<section class="row blog-content content">	
	<div class="arrow bounce">
    <a href="#bg-first" data-target="bg-first"></a>
  </div> <!--/.arrow bounce-->
	<div class="post-banner" id="bg-first">
		<h1> OUR BLOGS</h1>
	</div>
	<div class="col-xs-12 col-md-4 b-post">
		<% if !@last.nil? %>
			<%= image_tag "#{@last.blog_pic.thumb.url}", class: "index-thumbnails", alt: "vacation thumbnail pic" %><br>
			<h3> <%= @last.title %></h3>
			
		<% end %>
	</div>
	<div class="col-xs-12 col-md-4 b-post">
		<% if !@second.nil? %>
			<%= image_tag "#{@second.blog_pic.thumb.url}", class: "index-thumbnails", alt: "vacation thumbnail pic" %><br>
			<h3> <%= @second.title %></h3>
			
		<% end %>
	</div>
	<div class="col-xs-12 col-md-4 b-post">
		<% if !@third.nil? %>
			<%= image_tag "#{@third.blog_pic.thumb.url}", class: "index-thumbnails", alt: "vacation thumbnail pic" %><br>
			<h3> <%= @third.title %> </h3>
			
		<% end %>
	</div>
</section>
<section class="row video-content content">
	<div class="video-content">
		<div class="post-banner">
			<h2> OUR VIDEOS </h2>
		</div>
		<div class="col-xs-12 col-md-4">		
			<% if !@last_vid.nil? %>
				<%= raw(@last_vid.video) %><br>
				<h3> <%= @last_vid.title %></h3>
				<p> <%= @last_vid.video_text %> </p>
			<% end %>
		</div>
		<div class="col-xs-12 col-md-4">
			<% if !@second_vid.nil? %>
				<%= raw(@second_vid.video) %><br>
				<h3> <%= @second_vid.title %></h3>
				<p> <%= @second_vid.video_text %> </p>
			<% end %>
		</div>
		<div class="col-xs-12 col-md-4">
			<% if !@third_vid.nil? %>
				<%= raw(@third_vid.video) %><br>
				<h3> <%= @third_vid.title %></h3>
				<p> <%= @third_vid.video_text %> </p>
			<% end %>
		</div>
	</div>
</section>
